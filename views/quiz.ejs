            <label class="element-animation4 btn btn-lg btn-primary btn-block"><span class="btn-label"><i class="glyphicon glyphicon-chevron-right"></i></span> <input id="q3a4" type="radio" name="q_answer" value="<%=a12.true_false%>"><%= a12.answer_text %><p class="t3-f4"></p></label>
          </div>
          <form action="/quizzes/:id/results" method="POST"><button  class="button" type="submit" id="buttonsave">save<div id="result"></div></button></form>
      </div>
    <div class="modal-footer text-muted">
    <span id="answer"></span>
</div>
</div>
</div>
</div>
</body>
