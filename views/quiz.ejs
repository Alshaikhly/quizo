<div class="container-fluid bg-info"></div>
    <div class="modal-dialog">
      <div id="modal-content-id" class="modal-content"><div id="modal-body-id" class="modal-body"><form action="/users/<%= userTakingQuizId %>" method="GET"><button class="button" id ="profile-button" type="submit">Take me to my page</button></form></div></div> <!-- empty div going to insert results here once quiz is submitted-->
      <div class="modal-content">
         <div class="modal-header">
            <h4><span class="label label-warning" id="qid1"><%= a1.quiz_id %></span><%= a1.title %></h4>
            <h5><span class="label label-warning" id="qid">1</span> <%= a1.question_text %></h5>
        </div>
        <div class="modal-body">

            <div class="col-xs-3 col-xs-offset-5">
               <div id="loadbar" style="display: none;">
                  <div class="blockG" id="rotateG_01"></div>
                  <div class="blockG" id="rotateG_02"></div>
                  <div class="blockG" id="rotateG_03"></div>
                  <div class="blockG" id="rotateG_04"></div>
                  <div class="blockG" id="rotateG_05"></div>
                  <div class="blockG" id="rotateG_06"></div>
                  <div class="blockG" id="rotateG_07"></div>
                  <div class="blockG" id="rotateG_08"></div>
              </div>
            </div>

          <div class="quiz" id="question1" data-toggle="buttons">
            <label class="element-animation1 btn btn-lg btn-primary btn-block"><span class="btn-label"><i class="glyphicon glyphicon-chevron-right"></i></span> <input id="q1a1" type="radio" name="q_answer" value="<%=a1.true_false%>"><%= a1.answer_text %><p class="t-f1"></p></label>
            <label class="element-animation2 btn btn-lg btn-primary btn-block"><span class="btn-label"><i class="glyphicon glyphicon-chevron-right"></i></span> <input id="q1a2" type="radio" name="q_answer" value="<%=a2.true_false%>"><%= a2.answer_text %><p class="t-f2"></p></label>
            <label class="element-animation3 btn btn-lg btn-primary btn-block"><span class="btn-label"><i class="glyphicon glyphicon-chevron-right"></i></span> <input id="q1a3" type="radio" name="q_answer" value="<%=a3.true_false%>"><%= a3.answer_text %><p class="t-f3"></p></label>
            <label class="element-animation4 btn btn-lg btn-primary btn-block"><span class="btn-label"><i class="glyphicon glyphicon-chevron-right"></i></span> <input id="q1a4" type="radio" name="q_answer" value="<%=a4.true_false%>"><%= a4.answer_text %><p class="t-f4"></p></label>
          </div>
          <div class="modal-header">
            <h5><span class="label label-warning" id="qid">2</span> <%= a5.question_text %></h5>
        </div>
        <div class="quiz" id="question2" data-toggle="buttons">
            <label class="element-animation1 btn btn-lg btn-primary btn-block"><span class="btn-label"><i class="glyphicon glyphicon-chevron-right"></i></span> <input id="q2a1" type="radio" name="q_answer" value="<%=a5.true_false%>"><%= a5.answer_text %><p class="t2-f4"></p></label>
            <label class="element-animation2 btn btn-lg btn-primary btn-block"><span class="btn-label"><i class="glyphicon glyphicon-chevron-right"></i></span> <input id="q2a2" type="radio" name="q_answer" value="<%=a6.true_false%>"><%= a6.answer_text %><p class="t2-f4"></p></label>
            <label class="element-animation3 btn btn-lg btn-primary btn-block"><span class="btn-label"><i class="glyphicon glyphicon-chevron-right"></i></span> <input id="q2a3" type="radio" name="q_answer" value="<%=a7.true_false%>"><%= a7.answer_text %><p class="t2-f4"></p></label>
            <label class="element-animation4 btn btn-lg btn-primary btn-block"><span class="btn-label"><i class="glyphicon glyphicon-chevron-right"></i></span> <input id="q2a4" type="radio" name="q_answer" value="<%=a8.true_false%>"><%= a8.answer_text %><p class="t2-f4"></p></label>
          </div>
          <div class="modal-header">
            <h5><span class="label label-warning" id="qid">3</span> <%= a9.question_text %></h5>
        </div>
        <div class="quiz" id="question3" data-toggle="buttons">
            <label class="element-animation1 btn btn-lg btn-primary btn-block"><span class="btn-label"><i class="glyphicon glyphicon-chevron-right"></i></span> <input id="q3a1" type="radio" name="q_answer" value="<%=a9.true_false%>"><%= a9.answer_text %><p class="t3-f4"></p></label>
            <label class="element-animation2 btn btn-lg btn-primary btn-block"><span class="btn-label"><i class="glyphicon glyphicon-chevron-right"></i></span> <input id="q3a2" type="radio" name="q_answer" value="<%=a10.true_false%>"><%= a10.answer_text %><p class="t3-f4"></p></label>
